from openpyxl.styles import Font, Border, Side, PatternFill, Alignment
from openpyxl import load_workbook
wb = load_workbook("sample.xlsx")
ws = wb.active

# 번호, 영어, 수학
a1 = ws["A1"]   # 번호
b1 = ws["B1"]   # 영어
c1 = ws["C1"]   # 수학

# A 열의 너비를 5로 설정
ws.row_dismensions["A1"].width = 5

# 1 행의 높이를 50으로 설정
ws.row_dismensions[1].height = 50

# 스타일 적용
a1.font = Font(color="FF0000", italic=True, bold=True)
a1.font = Font(color="CC33FF", name="Arial", strike=True)
a1.font = Font(color="0000FF", size=20, underline="single")

# 테두리 적용
thin_border = Border(left=Side(style="thin"), right=Side(style="thin"), top=Side(style="thin"), bottom=Side(style="thin"))
a1.border = thin_border
b1.border = thin_border
c1.border = thin_border

# 90점 넘는 셀에 대해서 초록색으로 적용
for row in ws.rows:
    for cell in row:
        # 각 cell에 대해서 정렬
        cell.alingment = Alignment(horizontal="center", vertical="center")
        # center, left, right, top, bottom

        if cell.column == 1:    # A 번호열은 제외
            continue


wb.save("sample._chart.xlsx")
